{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "declarationMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "composite": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@prisma": ["libs/prisma/src/index"]
    }
  },
  "include": ["src/**/*.ts", "libs/**/**/*.ts", "scripts/*.ts"],
  "exclude": ["node_modules", "tmp", "dist", "build", "scripts", "prisma"]
}
