generator client {
  provider = "prisma-client-js"
  // output       = "../libs/prisma/src/generated/prisma"
  // moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  GOOGLE
  FACEBOOK
  LINE
  OKTA
  AUTH0

  @@map("auth_provider")
}

enum AuthProviderType {
  OAUTH2
  OIDC

  @@map("auth_provider_type")
}

enum TicTacToeResult {
  WIN
  LOSS
  DRAW
}

enum TicTacToePlayer {
  HUMAN // ฝั่งเรา
  BOT // ฝั่งบอท
}

model TicTacToeStat {
  id               String   @id @default(cuid()) @map("id")
  userId           String   @unique @map("user_id")
  score            Int      @default(0) @map("score")
  currentWinStreak Int      @default(0) @map("current_win_streak")
  totalWins        Int      @default(0) @map("total_wins")
  totalLosses      Int      @default(0) @map("total_losses")
  totalDraws       Int      @default(0) @map("total_draws")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tic_tac_toe_stats")
}

model User {
  id        String   @id @default(cuid()) @map("id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String? @unique @map("email")
  name     String? @map("name")
  lastName String? @map("last_name")
  picture  String? @map("picture") @db.Text

  accounts    Account[]    @relation("UserAccounts")
  sessions    Session[]    @relation("UserSessions")
  loginAudits LoginAudit[] @relation("UserLoginAudits")

  // เพิ่ม relation ไป stats / games
  ticTacToeStat  TicTacToeStat?
  ticTacToeGames TicTacToeGame[]

  @@map("users")
}

model TicTacToeGame {
  id           String          @id @default(cuid()) @map("id")
  userId       String          @map("user_id")
  result       TicTacToeResult @map("result")
  startingSide TicTacToePlayer @map("starting_side") // ใครเดินก่อน จาก coin toss
  scoreDelta   Int             @default(0) @map("score_delta") // +1 / -1 / +2 (ตอนได้โบนัส)
  createdAt    DateTime        @default(now()) @map("created_at")
  finishedAt   DateTime?       @map("finished_at")

  user  User            @relation(fields: [userId], references: [id])
  moves TicTacToeMove[]

  @@map("tic_tac_toe_games")
}

model TicTacToeMove {
  id        String          @id @default(cuid()) @map("id")
  gameId    String          @map("game_id")
  moveOrder Int             @map("move_order") // 1,2,3,...
  player    TicTacToePlayer @map("player") // HUMAN หรือ BOT
  position  Int             @map("position") // 0-8 (ช่องบนกระดาน)
  createdAt DateTime        @default(now()) @map("created_at")

  game TicTacToeGame @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@map("tic_tac_toe_moves")
}

model Account {
  id                String           @id @default(cuid()) @map("id")
  userId            String           @map("user_id")
  provider          AuthProvider     @map("provider")
  providerType      AuthProviderType @map("provider_type")
  providerAccountId String           @map("provider_account_id")
  email             String?          @map("email")

  // OAuth tokens
  accessToken  String? @map("access_token") @db.Text
  refreshToken String? @map("refresh_token") @db.Text
  tokenType    String? @map("token_type")
  scope        String? @map("scope")
  idToken      String? @map("id_token") @db.Text
  expiresAt    Int?    @map("expires_at") // epoch seconds

  sessionState   String? @map("session_state")
  rawProfileJson String? @map("raw_profile_json") @db.Text

  user User @relation("UserAccounts", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid()) @map("id")
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  createdAt    DateTime @default(now()) @map("created_at")
  expiresAt    DateTime @map("expires_at")

  user User @relation("UserSessions", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model LoginAudit {
  id        String        @id @default(cuid()) @map("id")
  userId    String?       @map("user_id")
  provider  AuthProvider? @map("provider")
  ipAddress String?       @map("ip_address") @db.VarChar(64)
  userAgent String?       @map("user_agent") @db.Text
  success   Boolean       @default(true) @map("success")
  createdAt DateTime      @default(now()) @map("created_at")

  user User? @relation("UserLoginAudits", fields: [userId], references: [id])

  @@index([userId])
  @@map("login_audits")
}
